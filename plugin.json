{
  "name": "Mverything Plus",
  "pluginName": "Mverything Plus",
  "author": "Trent0",
  "homepage": "https://github.com/trentlee0/mverything-plus",
  "description": "快速搜索、查找 Mac 上的文件，类似于 Everything",
  "version": "2.0.0",
  "logo": "logo.png",
  "main": "index.html",
  "preload": "preload.js",
  "platform": [
    "darwin"
  ],
  "development": {
    "main": "http://localhost:5173"
  },
  "pluginSetting": {
    "height": 545,
    "single": true
  },
  "features": [
    {
      "code": "find",
      "explain": "查找 Mac 上的文件",
      "cmds": [
        "find",
        "查找",
        {
          "type": "files",
          "label": "在此文件夹中搜索",
          "fileType": "directory",
          "minNum": 1,
          "maxNum": 1
        },
        {
          "type": "window",
          "label": "在此文件夹中搜索",
          "match": {
            "app": "Finder.app"
          }
        },
        {
          "type": "regex",
          "label": "文件夹中搜索",
          "match": "/^(\\/[^/\\n\\r\\f\\v]+)+\\/?$/",
          "minLength": 1,
          "maxLength": 300
        },
        {
          "type": "over",
          "label": "搜索",
          "exclude": "/[\\\\\\/\\t\\n]/",
          "minLength": 1,
          "maxLength": 100
        }
      ]
    }
  ]
}
